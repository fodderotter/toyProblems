/*
write a function that will console log the numbers 1 through 5, 
with delays between each log equaling the logged number.
delayLog() // pauses 1 second, then logs 1
// pauses 2 second, then logs 2
// pauses 3 seconds, then logs 3
// pauses 4 seconds, then logs 4
// pauses 5 seconds, then logs 5
*/

function delayLog() {
	var counter = 1;
	function logger() {
		if(counter < 6) {
			setTimeout(function() {
				console.log(counter);
				counter++;
				logger();
			}, counter * 1000);
		}
	}
	logger();
}